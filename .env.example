# 服务器配置
PORT=3000
NODE_ENV=production

# MiniMax API配置
MINIMAX_API_KEY=your_minimax_jwt_token_here
MINIMAX_GROUP_ID=your_group_id_here

# SiliconFlow API配置
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# 文件上传配置
MAX_FILE_SIZE=50MB
